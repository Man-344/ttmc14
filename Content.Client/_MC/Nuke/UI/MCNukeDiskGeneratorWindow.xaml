<ui:MCNukeDiskGeneratorWindow xmlns="https://spacestation14.io"
                              xmlns:ui="clr-namespace:Content.Client._MC.Nuke.UI"
                              MinSize="400 400">
    <BoxContainer Orientation="Vertical">
        <BoxContainer Orientation="Horizontal" Margin="0 0 0 5">
            <Label Text="{Loc mc-health-healthscanner}" MinWidth="80" Modulate="#5B88B0" />
            <ProgressBar Name="OverallProgressBar" Access="Public" HorizontalExpand="True">
                <Label Name="OverallProgressLabel" Access="Public" Align="Right" Margin="0 0 5 0" />
            </ProgressBar>
        </BoxContainer>
        <Button Name="RunButton" Text="Run" Access="Public" />
    </BoxContainer>
</ui:MCNukeDiskGeneratorWindow>
