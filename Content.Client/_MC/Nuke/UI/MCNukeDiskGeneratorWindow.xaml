<ui:MCNukeDiskGeneratorWindow xmlns="https://spacestation14.io"
                              xmlns:ui="clr-namespace:Content.Client._MC.Nuke.UI"
                              MinSize="400 120"
                              MaxSize="400 120"
                              Title="Nuke Disk Generator">
    <BoxContainer Orientation="Vertical"
                  HorizontalExpand="True"
                  VerticalAlignment="Center">
        <BoxContainer Orientation="Horizontal"
                      HorizontalExpand="True"
                      Margin="0 0 0 5">
            <Label Text="Overall Progress" MinWidth="80" Modulate="#5B88B0" />
            <ProgressBar Name="OverallProgressBar"
                         Access="Public"
                         HorizontalExpand="True">
                <Label Name="OverallProgressLabel" Access="Public" Align="Right" Margin="0 0 5 0" />
            </ProgressBar>
        </BoxContainer>
        <Button Name="RunButton" Text="Run Program" Access="Public" />
    </BoxContainer>
</ui:MCNukeDiskGeneratorWindow>
